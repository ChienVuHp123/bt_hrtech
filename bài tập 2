#include <stdio.h>

int main()
{
	int n;
	printf("Nhap so nguyen bat ky: ");
	scanf("%d", &n);
	if(n % 2 == 0) printf("So vua nhap la so chan ");
	else           printf("So vua nhap la so le");
	printf("\n");
	if(n > 0) printf("So la so duong");
	else if( n == 0) printf("So da cho khong phai la so nguyen am hay so nguyen duong");
	else      printf("So la so am");
	return 0;
}
